# ========================================
# SERVER CONFIGURATION
# ========================================
NODE_ENV=development
PORT=5000
HOST=localhost
API_VERSION=v2
BASE_URL=http://localhost:5000
BODY_LIMIT=16kb
SERVER_TIMEOUT=30000
KEEP_ALIVE_TIMEOUT=5000
SHUTDOWN_TIMEOUT=15000
CLUSTERING=false

# ========================================
# DATABASE CONFIGURATION
# ========================================
MONGODB_URI=your-mongodb-uri
MONGODB_DB_NAME=your-database-name
DB_MAX_POOL_SIZE=5
DB_TIMEOUT=5000
DB_SOCKET_TIMEOUT=45000

# ========================================
# JWT CONFIGURATION
# ========================================
JWT_SECRET=your-jwt-secret-key
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d
ACCESS_TOKEN_SECRET=your-access-token-secret
REFRESH_TOKEN_SECRET=your-refresh-token-secret
ACCESS_TOKEN_EXPIRY=24h
REFRESH_TOKEN_EXPIRY=7d
JWT_ISSUER=yourcompany
JWT_AUDIENCE=yourapp

# ========================================
# SECURITY CONFIGURATION
# ========================================
CORS_ORIGIN=your-allowed-origin
RATE_LIMIT_WINDOW_MS=15*60*1000
RATE_LIMIT_MAX=
RATE_LIMIT_MESSAGE=Too many requests, please try again later.
PASSWORD_RESET_TOKEN_EXPIRY=60

# ========================================
# EMAIL CONFIGURATION (Development - Use Mailtrap or similar)
# ========================================
EMAIL_SERVICE=gmail
EMAIL_HOST=smtp.mailtrap.io
EMAIL_PORT=2525
EMAIL_SECURE=false
EMAIL_USERNAME=your-mailtrap-username
EMAIL_PASSWORD=your-mailtrap-password
EMAIL_FROM=noreply@yourcompany.com
EMAIL_FROM_NAME=Your Company


# ========================================
# FILE UPLOAD CONFIGURATION
# ========================================
UPLOAD_DIR=uploads
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp,image/svg+xml

# ========================================
# LOGGING CONFIGURATION
# ========================================
LOG_LEVEL=debug
LOG_TO_FILE=true
LOG_FILE_PATH=./logs
LOG_FILE=dev.log
LOG_MAX_SIZE=5m
LOG_MAX_FILES=3d
LOG_TO_CONSOLE=true

# ========================================
# CACHE CONFIGURATION (Optional)
# ========================================
REDIS_URL=your-redis-url
REDIS_HOST=your-redis-host
REDIS_PORT=your-redis-port
REDIS_PASSWORD=your-redis-password
REDIS_DB=your-redis-db-number
REDIS_KEY_PREFIX=yourapp:dev
CACHE_TTL=1800

# ========================================
# VALIDATION CONFIGURATION
# ========================================
PASSWORD_MIN_LENGTH=6
PASSWORD_REQUIRE_UPPERCASE=false
PASSWORD_REQUIRE_LOWERCASE=false
PASSWORD_REQUIRE_NUMBERS=false
PASSWORD_REQUIRE_SPECIAL=false
EMAIL_MAX_LENGTH=254
USERNAME_MIN_LENGTH=3
USERNAME_MAX_LENGTH=30
USERNAME_PATTERN=^[a-zA-Z0-9_]+$ # Alphanumeric and underscores only

# ========================================
# MONITORING & ANALYTICS (Development)
# ========================================
SENTRY_DSN=your-sentry-dsn
GA_TRACKING_ID=your-ga-tracking-id
SENTRY_TRACES_SAMPLE_RATE=1.0