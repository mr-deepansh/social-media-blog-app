{
	"name": "social-media-blog-app",
	"version": "1.0.0",
	"description": "Professional social media blog application with user authentication, password reset, and email notifications",
	"main": "src/server.js",
	"type": "module",
	"scripts": {
		"dev": "nodemon -r dotenv/config src/server.js",
		"start": "node -r dotenv/config src/server.js",
		"lint": "eslint . --fix",
		"format": "prettier --write .",
		"code:fix": "npm run format && npm run lint",
		"redis:start": "docker run -d --name myredis -p 6379:6379 redis:latest",
		"redis:stop": "docker stop myredis && docker rm myredis",
		"redis:logs": "docker logs -f myredis",
		"dev:all": "npm run redis:start && npm run dev",
		"lint:check": "eslint .",
		"lint:security": "eslint . --ext .js --config eslint.security.js",
		"format:check": "prettier --check .",
		"code:check": "npm run lint:check && npm run format:check",
		"prepare": "husky install",
		"pre-commit": "lint-staged",
		"fix:common": "node scripts/fix-common-issues.js",
		"fix:critical": "node scripts/fix-critical-errors.cjs",
		"lint:summary": "npm run lint:check 2>&1 | findstr problems || echo No problems found",
		"test": "jest --detectOpenHandles --forceExit",
		"test:watch": "jest --watch --detectOpenHandles",
		"test:coverage": "jest --coverage --detectOpenHandles --forceExit",
		"clean": "rm -rf node_modules package-lock.json && npm install",
		"docker:build": "docker build -t social-media-blog .",
		"docker:run": "docker run -p 5000:5000 --env-file .env social-media-blog",
		"docker:compose": "docker-compose up -d",
		"docker:stop": "docker-compose down",
		"security:audit": "npm audit",
		"security:fix": "npm audit fix",
		"deps:update": "npm update"
	},
	"keywords": [
		"social-media",
		"blog",
		"api",
		"rest",
		"nodejs",
		"express",
		"mongodb",
		"authentication",
		"password-reset",
		"email",
		"jwt",
		"backend",
		"fullstack",
		"endlesschatt",
		"instagram",
		"facebook",
		"twitter",
		"linkedin",
		"whatsapp",
		"telegram",
		"discord",
		"slack",
		"youtube"
	],
	"author": {
		"name": "Deepansh Gangwar",
		"email": "deepanshgangwar7037@outlook.com",
		"url": "https://github.com/mr-deepansh"
	},
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/mr-deepansh/social-media-blog-app.git"
	},
	"bugs": {
		"url": "https://github.com/mr-deepansh/social-media-blog-app/issues"
	},
	"homepage": "https://github.com/mr-deepansh/social-media-blog-app#readme",
	"engines": {
		"node": ">=16.0.0",
		"npm": ">=8.0.0"
	},
	"os": [
		"linux",
		"darwin",
		"win32"
	],
	"cpu": [
		"x64",
		"arm64"
	],
	"dependencies": {
		"bcrypt": "^5.1.1",
		"bull": "^4.16.5",
		"cookie-parser": "^1.4.6",
		"cors": "^2.8.5",
		"crypto": "^1.0.1",
		"dotenv": "^16.4.1",
		"ejs": "^3.1.10",
		"express": "^4.18.2",
		"fast-csv": "^5.0.2",
		"helmet": "^8.0.0",
		"ioredis": "^5.7.0",
		"jsonwebtoken": "^9.0.2",
		"mongoose": "^8.1.1",
		"morgan": "^1.10.0",
		"multer": "^1.4.5-lts.1",
		"nodemailer": "^6.10.0",
		"zod": "^3.25.67"
	},
	"devDependencies": {
		"@eslint/js": "^9.33.0",
		"eslint": "^9.21.0",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-import": "^2.32.0",
		"eslint-plugin-node": "^11.1.0",
		"eslint-plugin-prettier": "^5.2.3",
		"eslint-plugin-security": "^3.0.1",
		"husky": "^9.1.7",
		"jest": "^29.7.0",
		"lint-staged": "^15.5.2",
		"node-fetch": "^3.3.2",
		"nodemon": "^3.0.3",
		"prettier": "^3.6.2",
		"supertest": "^6.3.3"
	},
	"optionalDependencies": {
		"compression": "^1.7.4",
		"express-rate-limit": "^7.1.0",
		"express-validator": "^7.0.1",
		"redis": "^4.6.0",
		"winston": "^3.11.0",
		"winston-daily-rotate-file": "^4.7.1"
	},
	"config": {
		"port": 5000,
		"host": "localhost"
	},
	"preferGlobal": false,
	"private": false,
	"publishConfig": {
		"access": "public"
	},
	"bundleDependencies": []
}
