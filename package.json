{
  "name": "endlesschat-server",
  "version": "2.0.0",
  "description": "Enterprise-grade social media blog platform with advanced analytics, and comprehensive security",
  "main": "src/server.js",
  "type": "module",
  "scripts": {
    "dev": "cross-env NODE_ENV=development nodemon src/server.js",
    "dev:clean": "npm run prod:kill-port && npm run dev",
    "start": "cross-env NODE_ENV=production node src/server.js",
    "prod:simple": "cross-env NODE_ENV=production LOG_LEVEL=info node src/server.js",
    "prod:full": "pm2 delete social-media-blog-app || (echo Starting fresh) && cross-env NODE_ENV=production LOG_LEVEL=info pm2 start ecosystem.config.cjs --env production",
    "prod:reload": "cross-env NODE_ENV=production pm2 reload ecosystem.config.cjs --env production",
    "prod:force": "pm2 delete all && cross-env NODE_ENV=production pm2 start ecosystem.config.cjs --env production",
    "prod:clean": "npm run prod:kill-port && pm2 delete all && npm run prod:full",
    "pm2:start": "cross-env NODE_ENV=production pm2 start ecosystem.config.cjs --env production",
    "pm2:stop": "pm2 stop ecosystem.config.cjs",
    "pm2:restart": "pm2 restart ecosystem.config.cjs",
    "pm2:logs": "pm2 logs",
    "pm2:monit": "pm2 monit",
    "pm2:status": "pm2 status",
    "pm2:delete": "pm2 delete ecosystem.config.cjs",
    "pm2:save": "pm2 save",
    "pm2:startup": "pm2 startup",
    "pm2:list": "pm2 list",
    "pm2:show": "pm2 show social-media-blog-app",
    "pm2:scale": "pm2 scale social-media-blog-app",
    "prod:check-port": "netstat -ano | findstr :5000",
    "prod:kill-port": "FOR /f \"tokens=5\" %a in ('netstat -aon ^| find \":5000\" ^| find \"LISTENING\"') do taskkill /f /pid %a",
    "prod:info": "pm2 info social-media-blog-app",
    "prod:env": "pm2 env 0",
    "prod:describe": "pm2 describe social-media-blog-app",
    "prod:health": "curl http://localhost:5000/health || echo 'Service not responding'",
    "prod:endpoints": "echo 'API Endpoints:' && echo 'Health: http://localhost:5000/health' && echo 'API: http://localhost:5000/api/v2' && echo 'Status: http://localhost:5000'",
    "service:info": "node scripts/service-info.js",
    "service:status": "node scripts/service-info.js",
    "health:check": "node scripts/health-check.js",
    "security:audit": "node scripts/security-audit.js",
    "security:validate": "node scripts/security-audit.js",
    "test": "echo 'Tests temporarily disabled - use npm run prod:simple to test server'",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint . --fix",
    "lint:check": "eslint .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "prepare": "husky",
    "pre-commit": "lint-staged",
    "pre-push": "eslint . --quiet",
    "clean": "rm -rf node_modules package-lock.json && npm install"
  },
  "keywords": [
    "social-media",
    "blog-platform",
    "microservices",
    "enterprise",
    "nodejs",
    "express",
    "mongodb",
    "redis",
    "jwt-authentication",
    "real-time-notifications",
    "analytics",
    "docker",
    "kubernetes",
    "scalable",
    "secure"
  ],
  "author": {
    "name": "Deepansh Gangwar",
    "email": "deepanshgangwar7037@outlook.com",
    "url": "https://github.com/mr-deepansh"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/mr-deepansh/social-media-blog-app.git"
  },
  "bugs": {
    "url": "https://github.com/mr-deepansh/social-media-blog-app/issues"
  },
  "homepage": "https://github.com/mr-deepansh/social-media-blog-app#readme",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "dependencies": {
    "@eslint/config-array": "^0.21.0",
    "@eslint/object-schema": "^2.1.6",
    "axios": "^1.7.9",
    "bcrypt": "^5.1.1",
    "bull": "^4.16.5",
    "bullmq": "^5.34.0",
    "chalk": "^5.6.0",
    "cloudinary": "^2.7.0",
    "compression": "^1.7.5",
    "connect-timeout": "^1.9.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "ejs": "^3.1.10",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.1",
    "express-slow-down": "^2.0.3",
    "express-validator": "^7.2.1",
    "fast-csv": "^5.0.2",
    "geoip-lite": "^1.4.10",
    "helmet": "^8.0.0",
    "ioredis": "^5.7.0",
    "joi": "^18.0.1",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.18.0",
    "morgan": "^1.10.0",
    "multer": "^2.0.2",
    "node-cron": "^4.2.1",
    "nodemailer": "^7.0.9",
    "pm2": "^6.0.10",
    "rate-limit-redis": "^4.2.2",
    "ua-parser-js": "^2.0.4",
    "winston": "^3.17.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/js": "^9.33.0",
    "cross-env": "^10.1.0",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.2.3",
    "eslint-plugin-security": "^3.0.1",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^15.5.2",
    "node-fetch": "^3.3.2",
    "nodemon": "^3.0.3",
    "prettier": "^3.6.2",
    "supertest": "^7.1.4"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write"
    ]
  },
  "jest": {
    "preset": "@babel/preset-env",
    "testEnvironment": "node",
    "extensionsToTreatAsEsm": [
      ".js"
    ],
    "globals": {
      "jest": {
        "useESM": true
      }
    },
    "moduleNameMapping": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "transform": {},
    "testMatch": [
      "**/test/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/server.js"
    ]
  }
}
