{
	"name": "social-media-blog-app",
	"version": "1.0.0",
	"description": "Professional social media blog application with user authentication, password reset, and email notifications",
	"main": "src/server.js",
	"type": "module",
	"scripts": {
		"dev": "nodemon -r dotenv/config src/server.js",
		"start": "node -r dotenv/config src/server.js",
		"lint": "eslint . --fix",
		"lint:check": "eslint .",
		"format": "prettier --write .",
		"test": "jest --detectOpenHandles --forceExit",
		"test:watch": "jest --watch --detectOpenHandles",
		"test:coverage": "jest --coverage --detectOpenHandles --forceExit",
		"test:admin": "jest tests/admin --detectOpenHandles --forceExit",
		"test:api": "node test-admin-controllers.js",
		"test:legacy": "node test-api.js && node test-endpoints.js && node test-password-reset.js",
		"test:admin-routes": "node tests-admin/test-admin-routes.js",
		"test:admin-routes:ps": "powershell -ExecutionPolicy Bypass -File tests-admin/test-admin-routes.ps1",
		"test:powershell": "powershell -ExecutionPolicy Bypass -File test-admin-api.ps1",
		"test:shell": "bash test-admin-api.sh",
		"test:all": "npm run test && npm run test:api && npm run test:admin-routes",
		"clean": "rm -rf node_modules package-lock.json && npm install",
		"docker:build": "docker build -t social-media-blog .",
		"docker:run": "docker run -p 5000:5000 --env-file .env social-media-blog",
		"docker:compose": "docker-compose up -d",
		"docker:stop": "docker-compose down",
		"security:audit": "npm audit",
		"security:fix": "npm audit fix",
		"deps:update": "npm update",
		"create-super-admin": "node create-super-admin.js"
	},
	"keywords": [
		"social-media",
		"blog",
		"api",
		"rest",
		"nodejs",
		"express",
		"mongodb",
		"authentication",
		"password-reset",
		"email",
		"jwt",
		"backend",
		"fullstack"
	],
	"author": {
		"name": "Deepansh Gangwar",
		"email": "deepanshgangwar7037@outlook.com",
		"url": "https://github.com/mr-deepansh"
	},
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/mr-deepansh/social-media-blog-app.git"
	},
	"bugs": {
		"url": "https://github.com/mr-deepansh/social-media-blog-app/issues"
	},
	"homepage": "https://github.com/mr-deepansh/social-media-blog-app#readme",
	"engines": {
		"node": ">=16.0.0",
		"npm": ">=8.0.0"
	},
	"os": [
		"linux",
		"darwin",
		"win32"
	],
	"cpu": [
		"x64",
		"arm64"
	],
	"dependencies": {
		"bcrypt": "^5.1.1",
		"bull": "^4.16.5",
		"cookie-parser": "^1.4.6",
		"cors": "^2.8.5",
		"crypto": "^1.0.1",
		"dotenv": "^16.4.1",
		"ejs": "^3.1.10",
		"express": "^4.18.2",
		"fast-csv": "^5.0.2",
		"helmet": "^8.0.0",
		"ioredis": "^5.7.0",
		"jsonwebtoken": "^9.0.2",
		"mongoose": "^8.1.1",
		"morgan": "^1.10.0",
		"multer": "^1.4.5-lts.1",
		"nodemailer": "^6.10.0",
		"zod": "^3.25.67"
	},
	"devDependencies": {
		"eslint": "^9.21.0",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-prettier": "^5.2.3",
		"jest": "^29.7.0",
		"node-fetch": "^3.3.2",
		"nodemon": "^3.0.3",
		"prettier": "^3.6.2",
		"supertest": "^6.3.3"
	},
	"optionalDependencies": {
		"compression": "^1.7.4",
		"express-rate-limit": "^7.1.0",
		"express-validator": "^7.0.1",
		"redis": "^4.6.0",
		"winston": "^3.11.0",
		"winston-daily-rotate-file": "^4.7.1"
	},
	"bundledDependencies": [],
	"config": {
		"port": 5000,
		"host": "localhost"
	},
	"preferGlobal": false,
	"private": false,
	"publishConfig": {
		"access": "public"
	},
	"bundleDependencies": []
}
