{
  "name": "social-media-blog-platform",
  "version": "2.0.0",
  "description": "Enterprise-grade social media blog platform with advanced analytics, and comprehensive security",
  "main": "src/server.js",
  "type": "module",
  "scripts": {
    "dev": "set NODE_ENV=development && nodemon src/server.js",
    "dev:clean": "npm run prod:kill-port && npm run dev",
    "start": "set NODE_ENV=production && node src/server.js",
    "start:prod": "set NODE_ENV=production && set LOG_LEVEL=info && node src/server.js",
    "start:cluster": "NODE_ENV=production pm2 start ecosystem.config.js --no-daemon",
    "prod:start": "node scripts/production-start.js",
    "prod:start:force": "node scripts/production-start.js --force",
    "prod:check-port": "netstat -ano | findstr :5000",
    "prod:kill-port": "FOR /f \"tokens=5\" %a in ('netstat -aon ^| find \":5000\" ^| find \"LISTENING\"') do taskkill /f /pid %a",
    "test": "jest --passWithNoTests",
    "test:unit": "jest --testPathPattern=unit",
    "test:integration": "jest --testPathPattern=integration",
    "test:e2e": "jest --testPathPattern=e2e",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "test:performance": "jest --testPathPattern=performance",
    "lint": "eslint . --fix",
    "lint:check": "eslint .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up -d",
    "docker:prod": "docker-compose -f docker-compose.prod.yml up -d",
    "k8s:deploy": "kubectl apply -f infrastructure/kubernetes/",
    "k8s:delete": "kubectl delete -f infrastructure/kubernetes/",
    "k8s:status": "kubectl get pods,services,deployments",
    "security:audit": "npm audit && npm audit fix",
    "security:scan": "npm run security:audit && docker run --rm -v $(pwd):/app clair-scanner",
    "pm2:start": "pm2 start ecosystem.config.cjs",
    "pm2:stop": "pm2 stop ecosystem.config.cjs",
    "pm2:restart": "pm2 restart ecosystem.config.cjs",
    "pm2:reload": "pm2 reload ecosystem.config.cjs",
    "pm2:delete": "pm2 delete ecosystem.config.cjs",
    "pm2:logs": "pm2 logs",
    "pm2:monit": "pm2 monit",
    "pm2:status": "pm2 status",
    "prepare": "husky",
    "husky:setup": "node scripts/setup-husky.js",
    "pre-commit": "lint-staged",
    "pre-push": "npm run lint:check && npm run test",
    "clean": "rm -rf node_modules package-lock.json && npm install"
  },
  "keywords": [
    "social-media",
    "blog-platform",
    "microservices",
    "enterprise",
    "nodejs",
    "express",
    "mongodb",
    "redis",
    "jwt-authentication",
    "real-time-notifications",
    "analytics",
    "docker",
    "kubernetes",
    "scalable",
    "secure"
  ],
  "author": {
    "name": "Deepansh Gangwar",
    "email": "deepanshgangwar7037@outlook.com",
    "url": "https://github.com/mr-deepansh"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/mr-deepansh/social-media-blog-app.git"
  },
  "bugs": {
    "url": "https://github.com/mr-deepansh/social-media-blog-app/issues"
  },
  "homepage": "https://github.com/mr-deepansh/social-media-blog-app#readme",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "dependencies": {
    "@eslint/config-array": "^0.21.0",
    "@eslint/object-schema": "^2.1.6",
    "axios": "^1.7.9",
    "bcrypt": "^5.1.1",
    "bull": "^4.16.5",
    "bullmq": "^5.34.0",
    "chalk": "^5.6.0",
    "cloudinary": "^2.7.0",
    "compression": "^1.7.5",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "ejs": "^3.1.10",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.1",
    "express-slow-down": "^2.0.3",
    "express-validator": "^7.2.1",
    "fast-csv": "^5.0.2",
    "geoip-lite": "^1.4.10",
    "helmet": "^8.0.0",
    "ioredis": "^5.7.0",
    "joi": "^18.0.1",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.18.0",
    "morgan": "^1.10.0",
    "multer": "^2.0.2",
    "node-cron": "^4.2.1",
    "nodemailer": "^6.10.1",
    "pm2": "^6.0.10",
    "rate-limit-redis": "^4.2.2",
    "ua-parser-js": "^2.0.4",
    "winston": "^3.17.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/js": "^9.33.0",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.2.3",
    "eslint-plugin-security": "^3.0.1",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^15.5.2",
    "node-fetch": "^3.3.2",
    "nodemon": "^3.0.3",
    "prettier": "^3.6.2",
    "supertest": "^7.1.4"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "eslint --fix"
    ]
  }
}
