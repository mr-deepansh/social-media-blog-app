{
	"name": "social-media-blog-platform",
	"version": "2.0.0",
	"description": "Enterprise-grade social media blog platform with microservices architecture, advanced analytics, and comprehensive security",
	"main": "src/server.js",
	"type": "module",
	"scripts": {
		"dev": "nodemon src/server.js",
		"start": "node src/server.js",
		"dev:gateway": "cd gateway && npm run dev",
		"dev:auth": "cd services/auth-service && npm run dev",
		"dev:user": "cd services/user-service && npm run dev",
		"dev:blog": "cd services/blog-service && npm run dev",
		"dev:notification": "cd services/notification-service && npm run dev",
		"dev:admin": "cd services/admin-service && npm run dev",
		"dev:file": "cd services/file-service && npm run dev",
		"build": "npm run build:shared && npm run build:services",
		"build:shared": "cd shared && npm run build",
		"build:services": "npm run build:gateway && npm run build:auth && npm run build:user && npm run build:blog && npm run build:notification && npm run build:admin && npm run build:file",
		"build:gateway": "cd gateway && npm run build",
		"build:auth": "cd services/auth-service && npm run build",
		"build:user": "cd services/user-service && npm run build",
		"build:blog": "cd services/blog-service && npm run build",
		"build:notification": "cd services/notification-service && npm run build",
		"build:admin": "cd services/admin-service && npm run build",
		"build:file": "cd services/file-service && npm run build",
		"test": "jest",
		"test:unit": "jest --testPathPattern=unit",
		"test:integration": "jest --testPathPattern=integration",
		"test:e2e": "jest --testPathPattern=e2e",
		"test:coverage": "jest --coverage",
		"test:watch": "jest --watch",
		"test:performance": "jest --testPathPattern=performance",
		"lint": "eslint . --fix",
		"lint:check": "eslint .",
		"lint:services": "npm run lint:gateway && npm run lint:auth && npm run lint:user && npm run lint:blog && npm run lint:notification && npm run lint:admin && npm run lint:file",
		"lint:gateway": "cd gateway && npm run lint",
		"lint:auth": "cd services/auth-service && npm run lint",
		"lint:user": "cd services/user-service && npm run lint",
		"lint:blog": "cd services/blog-service && npm run lint",
		"lint:notification": "cd services/notification-service && npm run lint",
		"lint:admin": "cd services/admin-service && npm run lint",
		"lint:file": "cd services/file-service && npm run lint",
		"format": "prettier --write .",
		"format:check": "prettier --check .",
		"format:services": "npm run format:gateway && npm run format:auth && npm run format:user && npm run format:blog && npm run format:notification && npm run format:admin && npm run format:file",
		"format:gateway": "cd gateway && npm run format",
		"format:auth": "cd services/auth-service && npm run format",
		"format:user": "cd services/user-service && npm run format",
		"format:blog": "cd services/blog-service && npm run format",
		"format:notification": "cd services/notification-service && npm run format",
		"format:admin": "cd services/admin-service && npm run format",
		"format:file": "cd services/file-service && npm run format",
		"install:all": "npm install && cd shared && npm install && cd ../gateway && npm install && cd ../services/auth-service && npm install && cd ../user-service && npm install && cd ../blog-service && npm install && cd ../notification-service && npm install && cd ../admin-service && npm install && cd ../file-service && npm install",
		"docker:build": "docker-compose build",
		"docker:up": "docker-compose up -d",
		"docker:down": "docker-compose down",
		"docker:logs": "docker-compose logs -f",
		"docker:dev": "docker-compose -f docker-compose.dev.yml up -d",
		"docker:prod": "docker-compose -f docker-compose.prod.yml up -d",
		"k8s:deploy": "kubectl apply -f infrastructure/kubernetes/",
		"k8s:delete": "kubectl delete -f infrastructure/kubernetes/",
		"k8s:status": "kubectl get pods,services,deployments",
		"db:seed": "node scripts/seed-database.js",
		"db:migrate": "node scripts/migrate-database.js",
		"db:reset": "node scripts/reset-database.js",
		"health:check": "node scripts/health-check.js",
		"security:audit": "npm audit && npm audit fix",
		"security:scan": "npm run security:audit && docker run --rm -v $(pwd):/app clair-scanner",
		"pm2:start": "pm2 start ecosystem.config.js",
		"pm2:stop": "pm2 stop ecosystem.config.js",
		"pm2:restart": "pm2 restart ecosystem.config.js",
		"pm2:reload": "pm2 reload ecosystem.config.js",
		"pm2:delete": "pm2 delete ecosystem.config.js",
		"pm2:logs": "pm2 logs",
		"pm2:monit": "pm2 monit",
		"pm2:status": "pm2 status",
		"prepare": "husky install",
		"clean": "rm -rf node_modules package-lock.json && npm install",
		"clean:all": "npm run clean && cd shared && npm run clean && cd ../gateway && npm run clean && find services -name node_modules -type d -exec rm -rf {} + && find services -name package-lock.json -delete"
	},
	"keywords": [
		"social-media",
		"blog-platform",
		"microservices",
		"enterprise",
		"nodejs",
		"express",
		"mongodb",
		"redis",
		"jwt-authentication",
		"real-time-notifications",
		"analytics",
		"docker",
		"kubernetes",
		"scalable",
		"secure"
	],
	"author": {
		"name": "Deepansh Gangwar",
		"email": "deepanshgangwar7037@outlook.com",
		"url": "https://github.com/mr-deepansh"
	},
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/mr-deepansh/social-media-blog-app.git"
	},
	"bugs": {
		"url": "https://github.com/mr-deepansh/social-media-blog-app/issues"
	},
	"homepage": "https://github.com/mr-deepansh/social-media-blog-app#readme",
	"engines": {
		"node": ">=20.0.0",
		"npm": ">=10.0.0"
	},
	"dependencies": {
		"axios": "^1.7.9",
		"bcrypt": "^5.1.1",
		"bull": "^4.16.5",
		"bullmq": "^5.34.0",
		"chalk": "^5.6.0",
		"cloudinary": "^2.7.0",
		"compression": "^1.7.5",
		"cookie-parser": "^1.4.7",
		"cors": "^2.8.5",
		"dotenv": "^16.6.1",
		"ejs": "^3.1.10",
		"express": "^4.21.2",
		"express-rate-limit": "^7.5.1",
		"express-slow-down": "^2.0.3",
		"express-validator": "^7.2.1",
		"fast-csv": "^5.0.2",
		"geoip-lite": "^1.4.10",
		"helmet": "^8.0.0",
		"ioredis": "^5.7.0",
		"joi": "^18.0.1",
		"jsonwebtoken": "^9.0.2",
		"mongoose": "^8.18.0",
		"morgan": "^1.10.0",
		"multer": "^2.0.2",
		"node-cron": "^4.2.1",
		"nodemailer": "^6.10.1",
		"pm2": "^6.0.10",
		"rate-limit-redis": "^4.2.2",
		"ua-parser-js": "^2.0.4",
		"winston": "^3.17.0",
		"zod": "^3.25.76"
	},
	"devDependencies": {
		"@eslint/js": "^9.33.0",
		"eslint": "^8.57.0",
		"eslint-config-airbnb-base": "^15.0.0",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-import": "^2.32.0",
		"eslint-plugin-node": "^11.1.0",
		"eslint-plugin-prettier": "^5.2.3",
		"eslint-plugin-security": "^3.0.1",
		"husky": "^9.1.7",
		"jest": "^29.7.0",
		"lint-staged": "^15.5.2",
		"node-fetch": "^3.3.2",
		"nodemon": "^3.0.3",
		"prettier": "^3.6.2",
		"supertest": "^7.1.4"
	},
	"lint-staged": {
		"*.js": [
			"prettier --write",
			"eslint --fix"
		]
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	}
}
